@import "~styles/colors"
@import "~styles/zIndex"
@import "~styles/type"

.radarIntro
  color $color-lightGray
  display flex
  height 100%
  flex-direction column
  align-items center
  background rgba(0, 0, 0, 0.4)
  justify-content center
  max-width 100%
  z-index $zIndex-2
  position relative

.radarIntro-backgroundAnimation-fallback
  background-position 50% 50%
  background-size cover
  background-repeat no-repeat
  background-attachment local
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  z-index $zIndex-0
  pointer-events none

.radarIntro-backgroundAnimation
  position absolute
  width 100%
  height 100%
  left 0
  top 0
  background $color-black
  z-index $zIndex-0
  pointer-events none

.radarIntro-logo
  width 100%
  z-index $zIndex-1
  position absolute
  top 1rem
  left 0
  text-align center

.radarIntro-logo-image
  width 5rem

.radarIntro-name
  color $color-bekkGray
  font-size 2em
  font-weight normal
  z-index $zIndex-1
  padding-top 4rem
  @media only screen and (max-width: $breakpoint-min-medium)
    font-size 1.8em

.radarIntro-text
  text-align center
  width 80%
  max-width 45em
  margin-top 0.8em
  margin-bottom 2.8em
  color $color-bekkGray
  z-index $zIndex-1
  line-height $lineHeight-loose
  font-size 16px
  font-weight lighter
  @media only screen and (max-width: 768px)
    width 90%
    line-height 1.4em
    margin-top 1em
    margin-bottom 1em
  @media only screen and (max-width: 340px)
    font-size 80%

.radarIntro-text p
  margin-top 0.6em
  margin-bottom  0.8em

.radarIntro-text p:nth-child(1)
  font-size 1.3em

.radarIntro-navbar
  width 100%
  margin-top 0.8em
  display flex
  flex-direction row
  flex-wrap wrap
  justify-content center
  align-items center
  @media only screen and (max-width: 1024px)
    max-width 32em
  @media only screen and (max-width: 512px)
    max-width 16em


.radarIntro-button-container
  width 15em
  display flex
  flex-grow 0
  flex-shrink 0

.radarIntro-button
  width 100%
  text-transform uppercase
  background $color-translucentBlack
  color $color-bekkGray
  padding 0.8em 0.8em
  margin 0.3em
  font-weight lighter
  border 2px solid $color-bekkRed
  z-index $zIndex-1
  font-size 95%
  transition background .2s ease-out, border .2s ease-out
  &:active, &:focus, &:hover
    background $color-bekkRed
    color $color-white
    border 2px solid $color-bekkRed

