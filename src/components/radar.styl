@import "~styles/breakpoints"
@import "~styles/colors"
@import "~styles/zIndex"

body 
  -webkit-font-smoothing: antialiased;


.radar
  overflow hidden
  position relative
  height 100%

.radar-main
  background $color-black
  z-index $zIndex-0
  height 100%
  display flex
  flex-direction column
  @media screen and (min-width: $breakpoint-min-extraLarge)
    max-height 100%

.radar-main-logoAndMenuButton
  background linear-gradient(to bottom, $color-gray, $color-gray 4rem, $color-black 4rem)
  z-index $zIndex-1
  display flex
  flex-shrink 0
  flex-wrap wrap
  padding-right 4rem
  position relative
  align-items center

.radar-main-searchFieldContainer
  display none
  @media screen and (min-width: $breakpoint-min-extraLarge)
    display flex
    margin-left auto
    align-items center


.radar-main-searchFieldContainer input[type="search"].filters-searchInput
  margin 0
  border-bottom 2px solid $color-bekkRed
  color $color-lightGray
  margin-left 10px
  line-height 2.5rem
  @media screen and (min-width: 80rem)
    display block

.radar-main-searchFieldContainer input[type="search"].filters-searchInput:active
  border-bottom solid 4px $color-bekkRed

.radar-main-searchFieldContainer input[type="search"].filters-searchInput:focus
  border-bottom solid 4px $color-bekkRed


.searchButton
  color $color-white
  @media screen and (min-width: $breakpoint-min-extraLarge)
    display none


.searchButton:focus
  color $color-bekkRed

.menuButton
  display none
  color $color-white
  @media screen and (min-width: $breakpoint-min-extraLarge)
    display block

.menuButton:focus
  color $color-bekkRed
