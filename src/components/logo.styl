@import "~styles/colors"
@import "~styles/breakpoints"
@import "~styles/type"

.logo
  display flex
  align-items center
  height 4rem
  padding-right 1rem

.logo-radarName-link
  text-decoration none
  text-transform uppercase
  margin-left 0.6rem
  color $color-bekkRed
  display flex
  align-items center
  height 100%
  padding-top: 3px

.logo-radarName
  color $color-lightGrayButton
  font-size $fontSize-larger
  font-weight 100
  height 100%
  top 0.1rem
  @media only screen and (max-width: $breakpoint-min-medium)
    font-size $fontSize-large


.logo-bekkLink
  margin-left 1rem
  display flex
  align-items center
  height 100%

.logo-bekkLink-image
  $logoAspectRatio = 405.0 / 99.0
  position relative
  top 0.015rem
  height 1.15rem
  width @height * $logoAspectRatio // because IE
  display block
  @media only screen and (max-width: $breakpoint-min-medium)
    height 1rem

