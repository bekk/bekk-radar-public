@import "~styles/colors"
@import "~styles/type"
@import "~styles/breakpoints"

.filterHeader-container
  margin-top 1.5rem
  display flex
  margin-bottom 2rem
  flex-direction column

  @media screen and (min-width: $breakpoint-min-medium)
    margin-top 1rem
    flex-direction row
    align-items center

.filterHeader
  color $color-black
  display flex
  align-items center
  justify-content flex-start
  font-size $fontSize-small
  flex-wrap wrap

.filterHeader-description
  display flex
  color $color-darkGray
  align-items center
  justify-content flex-start
  margin-left 1rem
  height 1.75rem
  padding-left 0.75rem
  font-size $fontSize-smallest

.filterHeader-filterInfo
  color $color-white
  text-align center
  margin 2.7rem 0 1rem 0
  font-size $fontSize-smallest

  @media screen and (min-width: $breakpoint-min-medium)
    margin 0 0 0 1rem

.filterHeader-linkContainer
  margin-right 0.5rem
  padding 1.5rem 1rem

  &:hover
    background-color $color-gray

  @media screen and (min-width: $breakpoint-min-large)
    padding 0 1rem


.filterHeader-linkButton
  background none
  border none
  color $color-white

.filterHeader-closeButton
  background-color rgba(255,255,255,0.8)
  border none
  border-radius 50%
  width 1.5rem
  height 1.5rem
  position absolute
  right 0
  top 50%
  margin-top -0.75rem

.filterHeader-closeButton > .icon--small
  width 100%
  height 100%
  fill rgba(0,0,0,0.5)
